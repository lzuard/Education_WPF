<Application x:Class="EducationWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:EducationWPF"
             xmlns:vm="clr-namespace:EducationWPF.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/GridSplitters.xaml"/>
                <ResourceDictionary Source="Resources/Base/Brashes.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator x:Key="Locator"/>

        </ResourceDictionary>

    </Application.Resources>
</Application>
